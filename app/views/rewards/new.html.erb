<!-- app/views/icon_selection/new.html.erb -->

<% if @user.has_completed_actions? %>
  <h1>Choisis un Badge!</h1>
  <div class="row icon-pad">
    <% @actions.each do |action| %>
      <% if @user.achieved_action?(action) %>
        <div class="col-6 mx-auto">
          <div class="icon-selection">
            <div class="card-body">
              <div class="avatar-list mx-auto">
                <div class="avatar avatar-x-large">
                  <%= image_tag("achievements/#{action.icon}", alt: "Usuário", class:"avatar-image") %>
                  <img src="" class="avatar-frame anim-hue">
                </div>
              </div>
              <%= form_for :reward, url: rewards_path do |f| %>
                <%= f.hidden_field :selected_action_id, value: action.id %>
                <div class="text-center">
                  <%= f.submit "Select", class: "btn btn-outline-dark categories back-white mx-auto mb-2" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% else %>
  <h3>Aucune Icone Disponible ❌</h3>
  <p>Complète plus de challenges pour débloquer un Succès </p>
  <%= link_to 'retour', achievements_path, class: 'btn btn-outline-dark categories' %>
<% end %>
