<div id="categories">
  <% if @selected_category_ids.empty? %>
    <p>Filtrer les actions par catégories</p>
  <% elsif @selected_categories.any? %>
    <h1>Challenges choisis</h1>
    <p>selections: <%= @selected_categories.map(&:title).join(', ') %></p>
    <div class="custom-container">
      <div class="row">
        <% @actions.each do |action| %>
          <div class="col-6 cards-action-index">
            <div class="custom-card-custom-action-card" style="border: 3px solid <%= action.category.category_color %>">
              <div class="custom-card-title text-center" style="background-color: <%= action.category.category_color %>">


                <%= link_to action_path(action), class:"link-to-text text-truncate" do  %>
                  <%= action.name %>
                <% end %>

              </div>
              <div class="white-area">
                <div class="custom-card-icon-center">
                  <%= link_to action_path(action) do %>
                      <%= image_tag("icons/#{action.icon}", alt: 'Icon') %>
                    <% end %>
                  </a>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <p>Pas d'actions trouvées pour les catégories sélectionnées.</p>
  <% end %>
</div>
