<% if current_user.nil? %>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://github.com/Sam-lewagonsudent/rails-buildup/blob/master/app/assets/images/Air%20PnP2.png?raw=true);">
  <div class="container">
      <div class="container">
        <div class="row justify-content-center">
          <p class="welcome-text">
          </p>
          <%= image_tag "BuildUp2.png", class:"logo-large" %>
        </div>
      </div>
    <h1>Le Wagon brings <strong>tech skills</strong> to <strong>creative people</strong>!</h1>
    <p>Change your life and learn to code at one of our campuses around the world.</p>
    <a class="btn btn-flat" href="#">Apply now</a>
  </div>
</div>


<% else %>
<div class="container">
  <div class="row justify-content-center">
    <h2>Salut, <%= current_user.user_name %>!</h2>
    <%= link_to "liste des actions disponible", actions_path %>
    <%= link_to "liste de vos categories",  user_categories_path %>
    <%= link_to "liste de vos challenges",  user_challenges_path %>

  </div>
</div>
<%end%>

<p>Total value of completed actions: <%= @total_value %></p>

<h1>Users Ranked by Total Value of Completed Actions</h1>

<% @ranked_users.each_with_index do |user, index| %>
  <p>
    <%= index + 1 %>. <%= user.user_name %> - Total Value: <%= user.total_value %>
  </p>
<% end %>

<h1>Categories Ranked by Total Value of Completed Actions</h1>

<% @ranked_categories.each_with_index do |category, index| %>
  <p>
    <%= index + 1 %>. <%= category.title %> - Total Value: <%= category.total_value %>
  </p>
<% end %>

<h1>Users Ranked by Total Value of Completed Actions per Category</h1>

<% @categories.each do |category| %>
  <h2><%= category.title %></h2>
  <% category.ranked_users_by_total_value.each_with_index do |user, index| %>
    <p>
      <%= index + 1 %>. <%= user.user_name %> - Total Value: <%= user.total_value %>
    </p>
  <% end %>
<% end %>
