<% if current_user.nil? %>
<div class="banner" >
  <div class="container">
        <div class="row justify-content-center">
          <p class="welcome-text">
          </p>
          <%= image_tag "buildup2.png", class:"logo-large" %>
        </div>
  </div>
</div>

<% else %>
  <div class="container">
    <div class="d-flex flex-column align-items-center">
      <h2>Salut, <%= current_user.user_name %>!</h2>
        <% if current_user.selected_icon.present? %>
          <%= image_tag("achievements/#{current_user.selected_icon}", alt: "Selected Icon") %>
        <% end %>
      <p>Total de vos points: <%= @total_value %></p>
        <% @user_challenges_not_completed.each do |user_challenge| %>
        <div class="justify-content-center">
                Challenge: <% user_challenge.done %>
                Date: <%= user_challenge.created_at %>
                action: <%= user_challenge.action.name %>
            <% end %>
        </div>
    </div>
  </div>

<div class="progress-bar">
  <div class="progress" style="width: <%= @user_progress %>%;"></div>
</div>
<p>Level: <%= @user_level %></p>

  <div class="container">
    <div class="row mt-5">
      <div class="col-md-4">
        <div class="col-md-12 mb-1">
          <div class="card custom-card align-items-start">
            <div class="card-body text-center d-flex justify-content-start">
              <h5 class="card-title">Users Ranked by Total Value of Completed Actions</h5>
              <div>
                <% @ranked_users.each_with_index do |user, index| %>
                  <p>
                    <%= index + 1 %>. <%= user.user_name %> - Total Value: <%= user.total_value %>
                  </p>
                <% end %>
              </div>

            </div>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="col-md-12 mb-1">
          <div class="card custom-card align-items-start">
            <div class="card-body text-center d-flex justify-content-start">
              <h5 class="card-title">Categories Ranked by Total Value of Completed Actions</h5>
              <div>
                <% @ranked_categories.each_with_index do |category, index| %>
                  <p>
                    <%= index + 1 %>. <%= category.title %> - Total Value: <%= category.total_value %>
                  </p>
                <% end %>
              </div>

            </div>
          </div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="col-md-12 mb-1">
          <div class="card custom-card align-items-start">
            <div class="card-body text-center d-flex justify-content-start">
              <h5 class="card-title">Users Ranked by Total Value of Completed Actions per Category</h5>
              <div class="d-flex row mt-5">
                <% @categories.each do |category| %>
                    <h5><%= category.title %></h5>
                    <% category.ranked_users_by_total_value.each_with_index do |user, index| %>
                    <p class="text-truncate">
                      <%= index + 1 %>. <%= user.user_name %> - Total Value: <%= user.total_value %>
                    </p>
                  <% end %>

                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>










